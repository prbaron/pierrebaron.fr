---
layout: layouts/base.njk
templateClass:
---

<article class="container post">
  <header>
    <h1>{{ title }}</h1>
    <time class="text-muted" datetime="{{ page.date | readableDate('yyyy-LL-dd')}}">{{ page.date | readableDate }}</time>
  </header>
  <div class="prose">
    {{ content | safe }}
  </div>
</article>

{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
  <nav class="container pager">
    <ul>
      <li>
        {%- if previousPost %}
          <a class="pagerItem" href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
        {% endif %}
      </li>
      <li>
        {%- if nextPost %}
          <a class="pagerItem" href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
        {% endif %}
      </li>
    </ul>
  </nav>
{%- endif %}
