        </svg>
      </div>

      <nav class="header__nav">
        <ul>
          <li
              class="header__navItem {% if page.url === '/' -%}header__navItem--active{%- endif -%}"
              {%- if page.url === '/' -%}aria-current="page"{%- endif -%}
          >
            <a href="{{ '/' | url }}">Home </a>
          </li>
          {%- for entry in collections.all | eleventyNavigation %}
            <li
                class="header__navItem {% if page.url.startsWith(entry.url) -%}header__navItem--active{%- endif -%}"
                {%- if page.url.startsWith(entry.url) -%}aria-current="page"{%- endif -%}
            >
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
        </ul>
      </nav>
    </header>

    <main {%- if templateClass -%}class="{{ templateClass }}"{%- endif -%}>
      {{ content | safe }}
    </main>

    <footer></footer>
  </body>
</html>
